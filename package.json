{
  "author": {
    "name": "Matt Godbolt",
    "email": "matt@godbolt.org",
    "url": "https://xania.org"
  },
  "name": "jsbeeb",
  "description": "Emulate a BBC Micro",
  "repository": "git@github.com:mattgodbolt/jsbeeb.git",
  "version": "1.2.0",
  "//": "If you change the version of Node, it must also be updated at the top of the Dockerfile.",
  "engines": {
    "node": "22"
  },
  "type": "module",
  "main": "./src/app/app.js",
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "argparse": "^2.0.1",
    "bootstrap": "^5.3.8",
    "bootswatch": "^5.3.8",
    "event-emitter-es6": "^1.1.5",
    "fflate": "^0.8.2",
    "jquery": "^3.7.1",
    "pako": "^2.1.0",
    "smoothie": "^1.36.1",
    "underscore": "^1.13.7"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.12",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "npm-run-all": "^4.1.5",
    "pixelmatch": "^7.1.0",
    "prettier": "^3.6.2",
    "sharp": "^0.34.5",
    "vite": "^7.2.4",
    "vitest": "^4.0.10"
  },
  "optionalDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12"
  },
  "license": "GPL-3.0-or-later",
  "build": {
    "appId": "org.godbolt.bbc",
    "directories": {
      "output": "out/dist"
    },
    "linux": {
      "target": [
        "deb",
        "rpm"
      ],
      "category": "Game",
      "icon": "public/jsbeeb-icon.png"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/jsbeeb-icon.png"
    },
    "files": [
      "!tests"
    ],
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  },
  "scripts": {
    "prepare": "husky",
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "ci-checks": "eslint .",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "pre-commit": "lint-staged",
    "test": "npm-run-all test:*",
    "test:unit": "vitest run --silent=true tests/unit",
    "test:integration": "vitest run --silent=true tests/integration",
    "test:cpu": "node tests/test-suite.js",
    "coverage:unit": "vitest run tests/unit --coverage",
    "coverage:all-tests": "vitest run --coverage",
    "benchmark": "node src/app-bench.js",
    "electron": "npm run build && ELECTRON_DISABLE_SANDBOX=1 electron .",
    "electron:build": "electron-builder"
  },
  "lint-staged": {
    "*.js": [
      "vitest related --run --exclude tests/integration --no-file-parallelism",
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.{md,json,yml,yaml,css,html}": "prettier --write"
  }
}
