{
  "author": {
    "name": "Matt Godbolt",
    "email": "matt@godbolt.org",
    "url": "https://xania.org"
  },
  "name": "jsbeeb",
  "description": "Emulate a BBC Micro",
  "repository": "git@github.com:mattgodbolt/jsbeeb.git",
  "version": "0.0.7",
  "//": "If you change the version of Node, it must also be updated at the top of the Dockerfile.",
  "engines": {
    "node": "20"
  },
  "type": "module",
  "main": "./src/app/app.js",
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "argparse": "^2.0.1",
    "bootstrap": "^5.3.5",
    "bootswatch": "^5.3.5",
    "event-emitter-es6": "^1.1.5",
    "jquery": "^3.7.1",
    "smoothie": "^1.36.1",
    "underscore": "^1.13.7"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.1.1",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.6",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "npm-run-all": "^4.1.5",
    "pixelmatch": "^6.0.0",
    "prettier": "^3.5.3",
    "sharp": "^0.33.5",
    "vite": "^6.3.4",
    "vitest": "^3.1.1"
  },
  "license": "GPL-3.0-or-later",
  "build": {
    "appId": "org.godbolt.bbc",
    "directories": {
      "output": "out/dist"
    },
    "linux": {
      "target": "AppImage",
      "category": "Game"
    },
    "files": [
      "!tests"
    ],
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  },
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "husky",
    "ci-checks": "eslint .",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "format": "prettier --write .",
    "pre-commit": "lint-staged",
    "test-long:cpu": "node tests/test-suite.js",
    "test:unit": "vitest run tests/unit --silent",
    "test:integration": "vitest run tests/integration --silent",
    "test": "npm-run-all test:*",
    "test-long": "npm-run-all test-long:*",
    "test:coverage": "vitest run tests/unit --coverage",
    "test:coverage:utils": "vitest run tests/unit/test-utils.js --coverage --coverage.reportsDirectory=coverage --coverage.include=src/utils.js",
    "test:coverage:all": "vitest run --coverage",
    "benchmark": "node app-bench.js"
  },
  "lint-staged": {
    "*.js": [
      "vitest related --run --no-file-parallelism",
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.{css,md,html}": "prettier --write"
  }
}
